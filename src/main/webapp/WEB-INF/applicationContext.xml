	<context:component-scan base-package="mx.com.ebs.inter" />
	<context:annotation-config />
	<context:property-placeholder location="classpath*:portal.properties"/>

    <bean id="properties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list><value>classpath*:portal.properties</value></list>
        </property>
    </bean>
	
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="mx.com.ebs.inter.data.dao" />
	</bean>
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="mapperLocations" value="classpath:mx/com/ebs/inter/data/xml/**/*.xml" />
	</bean>
    <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:comp/env/jdbc/db_facturador"/>
    </bean>
